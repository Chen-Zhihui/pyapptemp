QPalette{background:#2E2F30;}

*{outline:0px;color:#BEC0C2;}

QSplitter {
    background: transparent;   
    border : 0px; 
    margin : 0px;
    padding : 0px;
}
QSplitter::handle {
    background: gray;   
    border : 1px; 
    margin : 0px;
    padding : 0px;
}
QSplitter::handle:horizontal {
    width: 1px;
}
QSplitter::handle:vertical {
    height: 1px;
}

QFrame[qss_vline="true"] {
    margin : 0px;
    border : 1px;
    padding : 0px;
    background : gray;
}
QFrame[qss_hline="true"] {
    margin : 0px;
    border : 1px;
    padding : 0px;
    background : gray;
}
QFrame {
    margin : 0px;
    border : 0px;
    padding : 0px;
    background : transparent;
}

